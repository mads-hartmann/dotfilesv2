{
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "Fira Mono for Powerline",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.gotoLocation.multiple": "goto",
  "editor.lineHeight": 16,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.scrollBeyondLastLine": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.wordBasedSuggestions": true,
  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 10,
  "files.defaultLanguage": "markdown", // For scratch documents ðŸ˜Ž
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "_*": "shellscript", // completion files.
    "zshrc": "shellscript",
    "zshenv": "shellscript",
    "*.env": "ini",
    "*.el": "lisp"
  },
  "files.exclude": {
    // MacOS
    "**/.DS_Store": true,
    // Git
    "**/.git": true,
    "**/.gitignore": false,
    // Editors & IDEs
    "**/.idea": true,
    "**/.vscode": false,
    // Common trash folders
    "**/.last-update": true,
    "**/.setup": true,
    "**/.build": true,
    "**/_build": true,
    "**/build": true,
    "**/tmp": true,
    "**/dist": true,
    // Node
    "**/node_modules": true,
    // OCaml / Reason
    "**/.merlin": true,
    "**/*.install": true,
    // python
    "**/.venv": true,
    "**/*.pyc": true,
    "**/*.egg-info": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    // Common trash folders
    "**/tmp/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "terminal.external.osxExec": "iTerm.app",
  "window.zoomLevel": 0,
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": true,
  "workbench.editor.tabCloseButton": "off",
  "workbench.fontAliasing": "default",
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.openMode": "doubleClick",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.useExperimentalGridLayout": true,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
      80
    ],
    "files.trimTrailingWhitespace": false
  },
  "[makefile]": {
    "editor.renderWhitespace": "boundary"
  },
  "[dockerfile]": {
    "editor.formatOnSave": false
  },
  "[liquid]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vsicons.presets.foldersAllDefaultIcon": true,
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.presets.hideExplorerArrows": true,
  "vsicons.presets.hideFolders": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "editor.renderControlCharacters": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "search.location": "panel",
  // I like to start from scratch every time.
  "window.restoreWindows": "none",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.tabSizing": "shrink",
  "telemetry.enableTelemetry": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "bashIde.highlightParsingErrors": false,
  "breadcrumbs.enabled": false,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.rendererType": "dom"
}
